# -*- coding: utf-8 -*-


    
def football_graph():
    return load_graph(FOOTBALL)
    
    
def karate_club_graph():
    return load_graph(KARATE)
    
    
def physics_citations():
    return load_graph(PHYSICS_CITATIONS)




def load_graph(interactions_file):
    nodes = set()
    edges = []
    for line in interactions_file:
        if line != '\\n' and line[0] != '#':
            (n, end) = line.split(' ')
            m = end[:-1]
            n = int(n)
            m = int(m)
            nodes.update([n, m])
            edges.append((n, m))

    interactions_file.close()
    
    k_graph = nx.Graph()
    k_graph.add_nodes_from(nodes)
    k_graph.add_edges_from(edges)
    
    return k_graph